class Flower {
  PImage img;
  float x, y;
  boolean collected;

  Flower(PImage img, float x, float y) {
    this.img = img;
    this.x = x;
    this.y = y;
    this.collected = false;
  }

  void display() {
    if (!collected) {
      image(img, x, y, 100, 100);
    }
  }

  boolean checkCollision(float miffyX, float miffyY) {
    if (dist(miffyX, miffyY, x, y) < 20 && !collected) {
      collected = true;
      resetFlower();
      return true;
    }
    return false;
  }

  void resetFlower() {
    x = random(width - 50);
    y = random(height - 50);
    collected = false;
  }
}
